<container>
  <div class = "row">
    <div class = "col-4"></div>
    <div class = "col-4">
      <img src="/assets/img/burger.png" class="burgerPic" alt="burger picture">
    </div>
     <div class = "col-4"></div>
  </div>

<div class="row">
  <div class="col-4">
      <ol>
        {{#each burgers}}
          {{#unless eaten}}
            {{> burgers/burger-block eaten=false}}
          {{/unless}}
        {{/each}}
      </ol>    
  </div>

  <div class="col-4">
    <h1 class = "text-center">Eat-da-Burger</h1>

    <form class="create-form">
      <div class="form-group">
        <input type="text" id="bg" name="burger_name">
      </div>
      <button type="submit">Add Burger</button>
    </form>

  </div>

  <div class="col-4">
    <ol>
    {{#each burgers}}
      {{#if eaten}}
        <li>   
          {{burger_name}}  
        </li>
      {{/if}}
    {{/each}}
    </ol>
  </div>

</div>

  <!-- Pass in data from server.js -->
  


</container>